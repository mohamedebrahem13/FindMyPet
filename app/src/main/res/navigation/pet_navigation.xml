<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pet_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/addPet"
        android:name="com.example.findmypet.ui.addpet.AddPetFragment"
        android:label="AddPet" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.findmypet.ui.profile.ProfileFragment"
        android:label="Profile" >
        <action
            android:id="@+id/action_profileFragment_to_profileEdit"
            app:destination="@id/profileEdit" />
        <argument
            android:name="userprofile"
            app:argType="com.example.findmypet.data.model.User"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/profileEdit"
        android:name="com.example.findmypet.ui.profile.edit.ProfileEdit"
        android:label="EditProfile" >
        <argument
            android:name="user_profile"
            app:argType="com.example.findmypet.data.model.User" />
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.findmypet.ui.home.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_addPet"
            app:destination="@id/addPet" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_conversationListFragment"
            app:destination="@id/conversationListFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.findmypet.ui.postdetails.PostDetailsFragment"
        android:label="@string/Pet_Details"
        tools:layout="@layout/fragment_post_details" >
        <argument
            android:name="post"
            app:argType="com.example.findmypet.data.model.Post" />
        <argument
            android:name="sourceFragment"
            app:argType="string" />
        <action
            android:id="@+id/action_detailsFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.findmypet.ui.chat.ChatFragment"
        android:label="ChatFragment">
        <argument
            android:name="User"
            app:argType="com.example.findmypet.data.model.User" />
        <action
            android:id="@+id/action_chatFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/conversationListFragment"
        android:name="com.example.findmypet.ui.converstion.ConversationListFragment"
        android:label="@string/Conversation">
        <action
            android:id="@+id/action_conversationListFragment_to_chatFragment2"
            app:destination="@id/chatFragment" />
    </fragment>
</navigation>